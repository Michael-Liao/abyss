{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "CMake: Debug build",
			"command": "cmake",
			"args": [
				"--build", "${workspaceFolder}/build",
				"--config", "Debug",
				"--target", "all",
				"--", "-j8"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "cmake debug build (all targets)"
		}
	]
}